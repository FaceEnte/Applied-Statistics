   "source": [
    "import numpy as np\n",
    "\n",
    "# data\n",
    "x = np.array([0, 1, 2, 3])\n",
    "y = np.array([1, 2, 5, 4])\n",
    "\n",
    "# empirical covariance\n",
    "sxy = np.cov(x, y)[0, 1]\n",
    "\n",
    "# empirical correlation\n",
    "r = np.corrcoef(x, y)[0, 1]\n",
    "\n",
    "# output\n",
    "print(f\"Empirical Covariance is: {sxy}\")\n",
    "print(f\"Empirical Correlation is: {r}\")"
   ],
